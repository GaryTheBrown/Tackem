{
	"name": "Tackem Dev Env",
	"dockerFile": "dockerfile",
	"context": "..",
	// Specifies a list of ports that should be published from the container.
	"appPort": [
		8081
	],
	// "postCreateCommand": "chmod 777 /dev/sr0",
	// update Dockerfile with your home folder
	"runArgs": [
		"--privileged",
		"-v",
		"/home/gary/.ssh:/home/Tackem/.ssh:ro",
		"--device=/dev/sr0"
	],
	// Use 'settings' to set *default* container specific settings.json values on container create.
	// You can edit these settings after create using File > Preferences > Settings > Remote.
	"settings": {
		"[python]": {
			"editor.rulers": [
				{
					"column": 100,
					"color": "#000000"
				}
			]
		},
		"[javascript]": {
			"editor.rulers": [
				{
					"column": 80,
					"color": "#000000"
				}
			]
		},
		"[html]": {
			"editor.rulers": [
				{
					"column": 120,
					"color": "#000000"
				}
			],
			"editor.defaultFormatter": "vscode.html-language-features"
		},
		"terminal.integrated.shell.linux": "/bin/bash",
		"python.pythonPath": "/usr/local/bin/python3.9",
		"python.linting.pylintEnabled": true,
		"python.linting.pylintPath": "pylint",
		"python.linting.enabled": true,
		"python.linting.pylintUseMinimalCheckers": false,
		"python.formatting.provider": "autopep8",
		"jshint.options": {
			"esversion": 6
		},
		"eslint.options": {
			"env": {
				"es6": true
			},
			"parserOptions": {
				"ecmaVersion": 6
			}
		}
	},
	// Specifies a command to run after the container is created
	//"postCreateCommand": "",
	"extensions": [
		"gua.rainbow-brackets",
		"christian-kohler.npm-intellisense",
		"DavidAnson.vscode-markdownlint",
		"dbaeumer.jshint",
		"dbaeumer.vscode-eslint",
		"eamodio.gitlens",
		"firefox-devtools.vscode-firefox-debug",
		"GitHub.vscode-pull-request-github",
		"Gydunhn.javascript-essentials",
		"HookyQR.beautify",
		"mechatroner.rainbow-csv",
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-toolsai.jupyter",
		"mutantdino.resourcemonitor",
		"oderwat.indent-rainbow",
		"ryanluker.vscode-coverage-gutters",
		"VisualStudioExptTeam.vscodeintellicode",
		"xabikos.JavaScriptSnippets",
		"gruntfuggly.todo-tree"
	]
}
